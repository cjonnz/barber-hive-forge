rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection - only admins can read/write
    match /admins/{adminId} {
      allow read: if request.auth != null && isAdmin();
      allow write: if request.auth != null && isAdmin();
    }
    
    // Barbeiros collection - only owner or admin can access
    match /barbeiros/{barbeiroId} {
      allow read: if request.auth != null && 
                    (request.auth.uid == barbeiroId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == barbeiroId;
      allow update, delete: if request.auth != null && 
                               (request.auth.uid == barbeiroId || isAdmin());
      
      // Produtos subcollection
      match /produtos/{produtoId} {
        allow read, write: if request.auth != null && 
                             (request.auth.uid == barbeiroId || isAdmin());
      }
      
      // Vendas subcollection
      match /vendas/{vendaId} {
        allow read, write: if request.auth != null && 
                             (request.auth.uid == barbeiroId || isAdmin());
      }
      
      // Contas a Receber subcollection
      match /contas_a_receber/{contaId} {
        allow read, write: if request.auth != null && 
                             (request.auth.uid == barbeiroId || isAdmin());
      }
      
      // Histórico subcollection
      match /historico/{historicoId} {
        allow read, write: if request.auth != null && 
                             (request.auth.uid == barbeiroId || isAdmin());
      }
      
      // Configurações subcollection
      match /configuracoes/{configId} {
        allow read, write: if request.auth != null && 
                             (request.auth.uid == barbeiroId || isAdmin());
      }
    }
    
    // Agendamentos - owner, admin, or public for creation
    match /agendamentos/{agendamentoId} {
      allow read: if request.auth != null;
      allow create: if true; // Public can create appointments
      allow update, delete: if request.auth != null && 
                              (request.auth.uid == resource.data.barbeiroId || isAdmin());
    }
    
    // System settings - only admins
    match /sistema/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
